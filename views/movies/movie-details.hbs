<div class="movie-details-container">
  <h1>Movie Details</h1>

<h3>Title:{{movie.title}}</h1>
<h3>Genre: {{movie.genre}}</h2>
<h3>Plot: {{movie.plot}}</h3>

<ul>
  {{#each movie.cast}}
       <li>
      {{this.name}} - {{this.occupation}} - {{this.catchPhrase}}
    </li>
  {{/each}}
</ul>

<form action="/movies/{{movie._id}}/delete" method="post" id="movieId">
    <button type="submit">Delete movie</button>
</form>

<a href="/movies/edit-movie/{{movie._id}}" id="movieId">Edit movie</a> <br>

<a href="/">HOME</a>
</div>
