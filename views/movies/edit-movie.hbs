<div class="edit-movie-container">
  <h2>Edit movie</h2>

  <form action="/movies/{{movie._id}}" method="post" id="movieId">
    Title:<input type="text" name="title" value="{{movie.title}}" />
    <br />
    Genre:
    <input type="text" name="genre" value="{{movie.genre}}" />
    <br />
    Plot:
    <input type="text" name="plot" value="{{movie.plot}}" />
    <br />

    Cast:
    <select name="cast" multiple>
      {{#each celebrity}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
    <button type="submit">Edit Movie</button>
  </form>
</div>