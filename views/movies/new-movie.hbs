<div class="new-movie-container">
  <h2>Create a movie</h2>

  <form action="/movies/create" method="post">
    <label>
      title:
      <input type="text" name="title" />
    </label>
    <label>
      Genre:
      <input type="text" name="genre" />
    </label>
    <label>
      Plot:
      <input type="text" name="plot" />
    </label>
    <div class="cast-list">
      <label>Cast:</label>
      <div class="checkbox-container">
        {{#each celebs}}
          <label>
            <input type="checkbox" name="selectedIds" value="{{this._id}}" />
            {{this.name}}
          </label>
        {{/each}}
      </div>
    </div>
    <button type="submit"> Submit </button>
  </form>

  <a href="/" class="centered-link">HOME</a>
</div>